<input type="number" id="num2" placeholder="3">
<input type="number" id="GCD" name = "GCD" value ="<%=calcGCD %>" placeholder="1" readOnly>
<input type="number" id="LCM" name = "LCM" value ="<%=calcLCM %>" placeholder="6" readOnly>
