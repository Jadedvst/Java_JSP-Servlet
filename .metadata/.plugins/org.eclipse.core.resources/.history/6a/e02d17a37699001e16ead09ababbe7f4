<%
	int num1 = 2;
	int num2 = 3;
	int calcGCD = 1;
	int calcLCM = 6;
	calcGCD=num1+num2;
	
%>
<%-- <%!
	public void handleClick(String num1,String num2){
	num2=num1;
}
%> --%>
